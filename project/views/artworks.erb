<div class="content-flex">

  <div class="sub-title-flex">
    <label>Artworks</label>
  </div>

  <div class="cards2">

    <form method="get" action="/artwork/find">
      <select id="art-by-artist-select" name="artist_id">
        <%for artist in @artists%>
        <option value="<%=artist.id%>"> <%=artist.last_name.capitalize%>, <%=artist.first_name.capitalize%>  </option>
        <% end %>
      </select>
      <input type="submit"  value="Filter by Artist">
    </form>

    <form method="get" action="/artwork/category">
      <label for="cat-select"></label>
      <select id="art-by-cat-select" name="category_id">
        <%for category in @categories%>
        <option value="<%=category.id%>"> <%=category.type.capitalize%></option>
        <% end %>
      </select>
      <input type="submit"  value="Filter by Category">
    </form>

    <form method="get" action="/artwork/all">
      <input type="submit"  value="Show All">
    </form>
  </div>

  <div class="cards">
    <%  for artwork in @artworks %>
      <div class="card-wrapper">
        <article class="card-artwork2">
          <div class="card-title"><%= artwork.title %></div>

          <div class="main-art">
            <a href="/artwork/<%=artwork.id%>/display"><img src="../images/artworks/<%= artwork.id %>.png" alt="where"></a>
          </div>


          <% for artist in @artists %>
            <% if artist.id == artwork.artist_id %>
              <label>Artist: <%= artist.first_name %> <%= artist.last_name %></label>
            <% end %>
          <% end %>
          <% for category in @categories %>
            <% if artwork.category_id == category.id %>
              <label>Category: <%= category.type.capitalize %></label>
            <% end %>
          <% end %>
        </article>

      </div>
    <% end %>
  </div>



  <div class="cards2">

    <form method="get" action="/artwork/find">
      <label for="artist-select"></label>
      <select id="art-by-artist-select" name="artist_id">
        <%for artist in @artists%>
        <option value="<%=artist.id%>"> <%=artist.last_name.capitalize%>, <%=artist.first_name.capitalize%>  </option>
        <% end %>
      </select>
      <input type="submit"  value="Filter by Artist">
    </form>

    <form method="get" action="/artwork/category">
      <label for="cat-select"></label>
      <select id="art-by-cat-select" name="category_id">
        <%for category in @categories%>
        <option value="<%=category.id%>"> <%=category.type.capitalize%></option>
        <% end %>
      </select>
      <input type="submit"  value="Filter by Category">
    </form>

    <form method="get" action="/artwork/all">
      <input type="submit"  value="Show All">
    </form>
  </div>

</div>
